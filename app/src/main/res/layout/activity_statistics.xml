<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.StatisticsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/statistics_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/statistics_toolbar">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="20sp"
            android:text="Total locations visited:"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="20sp" android:textColor="@color/Red"
            android:id="@+id/total_text" android:text=""/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="20sp"
            android:text="Including"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="20sp"
            android:text="Bus stops:"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="20sp" android:textColor="@color/Red"
            android:id="@+id/bus_stops_text" android:text=""/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="20sp"
            android:text="Train stations:"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="20sp" android:textColor="@color/Red"
            android:id="@+id/train_stations_text" android:text=""/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="20sp"
            android:text="Parking:"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="20sp" android:textColor="@color/Red"
            android:id="@+id/parking_text" android:text=""/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="20sp"
            android:text="Street parking:"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="20sp" android:textColor="@color/Red"
            android:id="@+id/street_text" android:text=""/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="20sp"
            android:text="Unspecified:"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textAlignment="center" android:textSize="20sp" android:textColor="@color/Red"
            android:id="@+id/error_text" android:text=""/>

    </LinearLayout>


</RelativeLayout>